<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="Client">
        <constructor-arg index="0" value="2"></constructor-arg>
        <constructor-arg index="1" value="JOHN SMITH"></constructor-arg>

    </bean>

    <bean id="eventLogger" class="ConsoleEventLogger"></bean>

    <bean id="app" class="App">
        <constructor-arg ref="client"></constructor-arg>
        <constructor-arg ref="eventLogger"></constructor-arg>
    </bean>

    <bean id="event" class="Event" scope="prototype">
        <constructor-arg >
            <bean class="java.util.Date"></bean>
        </constructor-arg>
        <constructor-arg>
            <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateInstance"/>
        </constructor-arg>
    </bean>


</beans>